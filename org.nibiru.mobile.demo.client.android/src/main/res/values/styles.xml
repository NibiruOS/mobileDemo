<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="nibiru_label">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_size</item>
    </style>

    <style name="nibiru_edit_text" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_size</item>
    </style>

    <style name="nibiru_checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_size</item>
    </style>

    <style name="nibiru_password_text" parent="nibiru_edit_text">
        <item name="android:textSize">@dimen/font_size</item>
    </style>

    <style name="nibiru_header_logo">
        <item name="android:layout_width">@dimen/header_logo_width</item>
        <item name="android:layout_height">@dimen/header_logo_height</item>
    </style>

    <style name="nibiru_container">
    </style>

</resources>
